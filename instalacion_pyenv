# Librerias necesarias para la instalación del ambiente virtual de python en mi maquina virtual de AWS

sudo apt-get install -y build-essential libssl-dev zlib1g-dev libbz2-dev \
libreadline-dev libsqlite3-dev wget curl llvm libncurses5-dev libncursesw5-dev \
xz-utils tk-dev libffi-dev liblzma-dev git

# Instalación desde la pagina pyenv.run

curl hhttp://pyenv.run | bash

# Configuración para el ambiente virtual de python

echo 'export PYENV_ROOT="$HOME/.pyenv"' >> ~/.bashrc
echo 'export PATH="$PYENV_ROOT/bin:$PATH"' >> ~/.bashrc
echo 'eval "$(pyenv init -)"' >> ~/.bashrc

# resetear la consola --> source ~/.bashrc